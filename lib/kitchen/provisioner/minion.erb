state_top: top.sls

file_client: local

file_roots:
 <%= config[:salt_env] %>:
   - <%= File.join(config[:root_path], config[:salt_file_root], 'states') %>

pillar_roots:
 <%= config[:salt_env] %>:
   - <%= File.join(config[:root_path], config[:salt_file_root], 'pillar') %>

extension_modules: <%= File.join(config[:root_path], config[:salt_file_root], 'python') %>

ext_pillar:
  - dewey_static:
      environment: vagrant
      role_file: <%= File.join(config[:root_path], 'dewey.yml') %>
  - secrets:
      dewey_url: https://dewey.soma.plos.org/api
      environment: dev
  - users:
      userdir: <%= File.join(config[:root_path], config[:salt_file_root], 'auth') %>
      environemnt: dev
